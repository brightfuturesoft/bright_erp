{
    "compilerOptions": {
        "baseUrl": "src", // ðŸ‘ˆ tells TypeScript that "@" means "src/"
        "paths": {
            "@/*": ["*"]
        },
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "strict": false,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
